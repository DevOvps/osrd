{
  "function_name": "bal3",
  "arguments": ["next_sig", "route"],
  "default_aspects": ["green"],
  "rules": {
    "red": {
      "type": "route_state",
      "route": "route",
      "state": "occupied"
    },
    "yellow": {
      "type": "and",
      "expressions": [
        {
          "type": "signal_aspect",
          "signal": "next_sig",
          "has_aspect": "red"
        },
        {
          "type": "not",
          "expression": {
            "type": "route_state",
            "route": "route",
            "state": "occupied"
          }
        }
      ]
    }
  }
}